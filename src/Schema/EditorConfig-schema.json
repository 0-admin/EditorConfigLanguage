{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",

  "definitions": {
    "keyword": {
      "type": "object",
      "required": [ "name", "description", "values" ],
      "additionalProperties": false,

      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "values": {
          "type": "array"
        },
        "unsupported": {
          "enum": [ true ]
        },
        "hidden": {
          "enum": [ true ]
        }
      }
    },
    "severities": {
      "type": "object",
      "required": ["name", "description"],
      "additionalProperties": false,

      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    }
  },

  "properties": {
    "properties": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/keyword"
      }
    },
    "severities": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/severities"
      }
    }
  }
}